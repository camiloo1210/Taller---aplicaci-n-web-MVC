@{
    ViewData["Title"] = "Liga Pro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <section id="inicio" class="hero">
        <h1>Bienvenidos a la Liga Nacional de Fútbol Ecuatoriana</h1>
        <p>La emoción del fútbol ecuatoriano en un solo lugar.</p>
        <a href="#equipos" class="btn">Conoce los equipos</a>
    </section>

    <section id="equipos" class="section">
        <h2>Equipos Participantes</h2>
        <div class="teams">
            <div class="team">
                <img src="team1.jpg" alt="Equipo 1">
                <h3>Equipo 1</h3>
            </div>
            <div class="team">
                <img src="team2.jpg" alt="Equipo 2">
                <h3>Equipo 2</h3>
            </div>
            <!-- Agrega más equipos según sea necesario -->
        </div>
    </section>

    <section id="calendario" class="section">
        <h2>Calendario de Partidos</h2>
        <p>Próximos partidos y resultados.</p>
        <!-- Aquí puedes agregar una tabla o lista con el calendario -->
    </section>

    <section id="noticias" class="section">
        <h2>Últimas Noticias</h2>
        <p>Mantente al día con las últimas noticias del fútbol ecuatoriano.</p>
        <!-- Aquí puedes agregar un feed de noticias o artículos -->
    </section>

    <footer id="contacto" class="footer">
        <h2>Contacto</h2>
        <p>Para más información, contáctanos a través de nuestras redes sociales.</p>
        <ul>
            <li><a href="#">Facebook</a></li>
            <li><a href="#">Twitter</a></li>
            <li><a href="#">Instagram</a></li>
        </ul>
    </footer>
</body>
</html>

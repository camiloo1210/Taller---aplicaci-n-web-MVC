@model IEnumerable<Taller1.Models.Equipo>

@{
    ViewData["Title"] = "Equipos LigaPro";
}

<h1>Equipos</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-success" >Crear Nuevo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AceptaExtranjeros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estadio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AceptaExtranjeros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estadio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEquipo" type="button" class="btn btn-success">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdEquipo" type="button" class="btn btn-warning">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEquipo"  type="button" class="btn btn-danger">Eliminar</a>
               
            </td>
        </tr>
}
    </tbody>
</table>
